{
    'env': {
        'browser': true,
        'es6': true,
    },
    'extends': 'eslint:recommended',
    'parserOptions': {
        'sourceType': 'module'
    },
    'rules': {
        'indent': ['error', 4],
        'linebreak-style': [ 'error', 'unix' ],
        'quotes': [ 'error', 'single' ],
        'max-len': ['error', 120],
        'semi': [ 'error', 'always' ],
        'spaced-comment': ['error', 'always', {
            'line': {
                'markers': ['/'],
                'exceptions': ['-', '+']
            },
            'block': {
                'markers': ['!'],
                'exceptions': ['*'],
                'balanced': true
            }
        }],

    },
    'globals': {
        'require': false,
        'module': false,
        'it': false,
        'expect': false,
    },
}
